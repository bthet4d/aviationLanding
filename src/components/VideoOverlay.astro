---
import flightLoop from '../images/videos/flightLoop.mp4';
import Countdown from '../components/Countdown.astro';

---
<section class="bg-gradient-to-b from-secondary via-secondary to-primary
p-8 text-center text-neutral-200" >
    <div class="relative flex items-center justify-center h-screen mb-12 overflow-hidden rounded-xl">
        <div class="relative z-30 p-5 text-2xl text-white --tw-bg-opacity-0 rounded-xl">
            <Countdown/>    
        </div>
        <video class="absolute z-10 w-auto min-w-full min-h-full max-w-none" id="video-background" loop muted autoplay>
            <source src={flightLoop}></source>
        </video>
    </div>
</section>
